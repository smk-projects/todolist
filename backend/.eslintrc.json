{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4],
        "no-tabs": "error",
        "no-mixed-spaces-and-tabs": "error",
        "no-unused-vars": "warn",
        "no-console": "off"
    },
    "ignorePatterns": ["node_modules/", "dist/", "build/"]
}
