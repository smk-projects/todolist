{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "no-tabs": "error",
    "no-mixed-spaces-and-tabs": "error"
  },
  "ignorePatterns": ["node_modules/", ".next/", "dist/", "build/"]
}
